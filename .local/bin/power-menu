#!/bin/bash

options=$(echo -e "\uf08b Logout\n\uf021 Reboot\n\uf011 Shutdown")
selected=$(echo -e "$options" | dmenu -i -p "Select an option:")

case "$selected" in
  "\uf08b Logout")
    pkill dwm
    ;;
  "\uf021 Reboot")
    systemctl reboot
    ;;
  "\uf011 Shutdown")
    systemctl poweroff
    ;;
  *)
    exit 1
    ;;
esac
