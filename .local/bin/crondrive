#!/usr/bin/env bash

# Cron job script to sync changes between remote and local directories.

declare -A remotes
remotes[orpheus]="${HOME}/.orpheus/"
remotes[prometheus]="${HOME}/.prometheus/"

for drive in "${!remotes[@]}"; do
    path="${remotes[$drive]}"
    rclone bisync "$path" "${drive}:" --check-access --verbose
done

