#!/usr/bin/env bash

# Switch globally between dark/light mode.

LINK_PATH="${HOME}/.Xresources"

if [ ! -L "$LINK_PATH" ]; then
    echo "Error: $LINK_PATH is not a symbolic link." >&2
  exit 1
fi

target_path=$(readlink "$LINK_PATH")
filename=$(basename "$target_path")

if [[ "$filename" == *"dark"* ]]; then
    printf "%s\n" \
	      "We can easily forgive a child who is afraid of the dark;" \
	      "the real tragedy of life is when men are afraid of the light."
    printf "— Plato\n"

    ln -sf "${HOME}/.config/dotfiles/.config/xsettingsd/xsettingsd-light.conf" \
              "${HOME}/.config/xsettingsd/xsettingsd.conf"
    ln -sf "${HOME}/.config/dotfiles/.Xresources-light" \
              "${HOME}/.Xresources"
    ln -sf "${HOME}/.emacs.d/local/switcher-day.el" \
              "${HOME}/.emacs.d/local/switcher.el"

    xrdb -merge "${HOME}/.Xresources"
    ~/.config/suckless/dwm/patch/dwmc xrdb
    killall -HUP xsettingsd
    killall -HUP urxvt
    killall -USR1 st
    emacsclient  --eval "(config-reload)" 1> /dev/null &

elif [[ "$filename" == *"light"* ]]; then
    printf "%s\n" \
	      "Darkness now rose, as daylight" \
	      "sunk, and brought in low'ring" \
	      "night her shadowy offspring."
    printf "— John Milton\n"

    ln -sf "${HOME}/.config/dotfiles/.config/xsettingsd/xsettingsd-dark.conf" \
              "${HOME}/.config/xsettingsd/xsettingsd.conf"
    ln -sf "${HOME}/.config/dotfiles/.Xresources-dark" \
              "${HOME}/.Xresources"
    ln -sf "${HOME}/.emacs.d/local/switcher-night.el" \
              "${HOME}/.emacs.d/local/switcher.el"

    xrdb -merge "${HOME}/.Xresources"
    ~/.config/suckless/dwm/patch/dwmc xrdb
    killall -HUP xsettingsd
    killall -HUP urxvt
    killall -USR1 st
    emacsclient --eval "(config-reload)" 1> /dev/null &

else
    echo "The proper configuration files were not found." >&2
    exit 1
fi
