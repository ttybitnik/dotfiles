#!/usr/bin/env bash

# Display the vpn status.

vpn=$(networkctl list | grep "wireguard.*routable" | awk '{print $2}')

if [[ -n "$vpn" ]]; then
    printf " %s" "$vpn"
else
    printf " Unsecured"
    # OPT(pgrep): x=exact
    if pgrep -x "qbittorrent" >/dev/null; then
        # OPT(killall): q=quiet
        killall -q qbittorrent
    fi
fi
