#!/usr/bin/env bash

# Display the network traffic in physical interfaces (using RAM for cache).

# OPT(id): u=user
readonly CACHE_DIR="/run/user/$(id -u)/net_bar"

update()
{
    local sum=0
    # OPT(read): r=no-backslashes
    for arg; do
	read -r i < "$arg"
	sum=$((sum + i))
    done
    cache="$CACHE_DIR/${1##*/}"

    local old=0
    # OPT(read): r=no-backslashes
    [[ -f "$cache" ]] && read -r old < "$cache"

    if (( sum < old )); then
	delta=$sum
    else
	delta=$((sum - old))
    fi

    printf "%d" "$sum" > "$cache"
    printf "%d" "$delta"
}

# OPT(mkdir): p=parents
mkdir -p "$CACHE_DIR"

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf " %4sB  %4sB\\n" "$(numfmt --to=iec "$rx")" "$(numfmt --to=iec "$tx")"
