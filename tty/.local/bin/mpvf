#!/usr/bin/env bash

# Wrapper script for mpv and firefox.

if [[ -z "$1" ]]; then
    tty_usage "%s <user>" "${0##*/}"
fi

# OPT(base64): d=decode
BASE_T="$(printf "aHR0cHM6Ly93d3cudHdpdGNoLnR2" | base64 -d)"
USR="${1}"
URL="${BASE_T}/${USR}"
CHAT="${BASE_T}/popout/$USR/chat?popout="

mpv "$URL" &> /dev/null &
firefox --new-window "$CHAT" &> /dev/null &
