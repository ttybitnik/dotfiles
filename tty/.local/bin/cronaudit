#!/usr/bin/env bash

# Cron job wrapper to log weekly audit summaries.
#   Dependencies:
#     ~/.local/bin/tty.sh

source tty.sh

tty::run_print sudo aureport --summary -ts this-week

# Command tracing via set -x because of the pipe
set -x
sudo ausearch -m FANOTIFY -ts this-week | sudo aureport --summary --file
