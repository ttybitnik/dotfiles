#!/bin/sh

# Cron/timer wrapper to log weekly audit summaries.

: "${ROOT_CMD:=sudo}"

# OPT(set): x=xtrace
set -x

# OPT(aureport): ts=start
"$ROOT_CMD" aureport --summary -ts week-ago

# OPT(ausearch): m=message ts=start
# OPT(aureport): f=file
"$ROOT_CMD" ausearch -m FANOTIFY -ts week-ago \
    | $ROOT_CMD aureport --summary -f
