[Unit]
Description=Restic check action
Before=restic-prune@%i.service
After=graphical-session.target restic-backup@%i.service restic-prune@%i.service
Requires=graphical-session.target

[Service]
Type=oneshot
EnvironmentFile=%h/.config/systemd/envs/restic.env
ExecStart=systemd-inhibit --what=shutdown:sleep --who="%p" --why="Operation of %n in progress" %h/.local/bin/cronbkp -c %i
