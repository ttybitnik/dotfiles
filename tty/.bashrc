# .bashrc
#===============================================================================
#				     System
#===============================================================================
if [[ -f /etc/bashrc ]]; then
    source /etc/bashrc
fi

GPG_TTY=$(tty)
export GPG_TTY
#===============================================================================
#				    Aliases
#===============================================================================
if [[ -f ~/.bash_aliases ]]; then
    source ~/.bash_aliases
fi

if [[ -d ~/.bashrc.d ]]; then
    for rc in ~/.bashrc.d/*; do
	if [ -f "$rc" ]; then
	    . "$rc"
	fi
    done
fi
unset rc
#===============================================================================
#				   Functions
#===============================================================================
cd()
{
    builtin cd "$@" && pwd
}
